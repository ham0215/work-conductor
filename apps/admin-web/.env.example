# Environment configuration for Admin Web
# Copy this file to .env.local for local development

# API Configuration
VITE_API_BASE_URL=http://localhost:8080

# Environment identifier
VITE_ENVIRONMENT=development

# Mock Authentication (for local development without Firebase)
# Set to "true" to enable mock authentication mode
# When enabled, you will be automatically logged in as a mock admin user
VITE_AUTH_MOCK_ENABLED=false

# Firebase Configuration (required when VITE_AUTH_MOCK_ENABLED is false)
VITE_FIREBASE_API_KEY=your-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
